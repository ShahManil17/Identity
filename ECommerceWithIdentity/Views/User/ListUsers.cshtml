@using Microsoft.AspNetCore.Identity;
@model IEnumerable<IdentityUser>;

@{
    ViewData["Title"] = "ListUsers";
}

<h1 class="mb-4">All Users</h1>

@if (Model.Any())
{
    <div class="mb-5 container">
        <div style="font-size:25px" class="row mb-3">
            <div class="col-md-5" style="font-size:35px">User Name</div>
            <div class="col-md-5" style="font-size:35px">Email</div>
            <div class="text-center col-md-2" style="font-size:35px">Actions</div>
        </div>
        @foreach (var user in Model)
        {
            <div style="font-size:20px" class="row mb-2">
                <div class="col-md-5">@user.UserName</div>
                <div class="col-md-5">@user.Email</div>
                <div class="text-end col-md-1">
                    <a asp-action="EditUser" asp-controller="User" asp-route-UserId="@user.Id" class="btn btn-primary">Edit</a>
                </div>
                <div class="text-end col-md-1">
                    <a href="#" class="btn btn-danger">Delete</a>
                </div>
            </div>
        }
    </div>
    <div class="container text-center">
        <a asp-action="Register" asp-controller="Account"
           class="btn btn-primary mb-3" style="width:auto">
            Add New User
        </a>
    </div>
}
else
{
    <div class="card">
        <div class="card-header">
            No Users Added Yet
        </div>
    </div>
}